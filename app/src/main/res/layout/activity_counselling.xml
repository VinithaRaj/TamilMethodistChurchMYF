<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Counselling"
    android:orientation="vertical"
    android:background="@drawable/commonbg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/picture3" />

        <TextView
            android:id="@+id/textViewcouns"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/blastimo"
            android:paddingTop="10sp"
            android:text=" Counselling"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/couns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/blastimo"
        android:text=" Here to Hear!"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp" />

    <ExpandableListView
        android:id="@+id/counlist"
        android:layout_width="400dp"
        android:layout_height="409dp"></ExpandableListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent"
        android:layout_below="@id/tmc"
        android:paddingTop="3dp"/>
    <TextView
        android:id="@+id/follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/blastimo"
        android:text="Click the links below"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iglogo"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/iglogo2" />

        <TextView
            android:id="@+id/iglink"
            android:layout_width="83dp"
            android:layout_height="72dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:paddingTop="20sp"
            android:text="myf.tac"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fblogo"
            android:layout_width="53dp"
            android:layout_height="49dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/fblogo" />

        <TextView
            android:id="@+id/fblink"
            android:layout_width="110dp"
            android:layout_height="72dp"
            android:layout_gravity="left"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="serif"
            android:paddingTop="20sp"

            android:text="TAC MYF"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>