<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Ministries"
    android:orientation="vertical"
    android:background="@drawable/commonbg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/picture7" />

        <TextView
            android:id="@+id/textViewmins"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/blastimo"
            android:paddingTop="10sp"
            android:text=" Ministries"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/mins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/blastimo"
        android:text=" Ongoing Projects"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50dp" />
    <TextView
        android:id="@+id/minstitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="serif"
        android:text=" Ongoing Projects"
        android:textColor="@color/colorAccent"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"

        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/venue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="serif"
        android:textColor="#000000"
        android:textSize="20sp" />

    <ExpandableListView
        android:id="@+id/minlist"
        android:layout_width="400dp"
        android:layout_height="590dp">


    </ExpandableListView>

</LinearLayout>