<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"

    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:weightSum="10"
    tools:context=".mainhome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_weight="2">


        <ImageView
            android:id="@+id/tmclogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:src="@drawable/logoflee"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmclogo"

            android:layout_centerHorizontal="true"
            android:fontFamily="@font/betty"
            android:gravity="center_horizontal"

            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Tamil Annual Conference \n Methodist Youth Fellowship"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="35dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_below="@id/tmc"
            android:paddingTop="3dp"/>
        <TextView
            android:id="@+id/gridtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tmc"


            android:fontFamily="@font/blastimo"
            android:gravity="left"
            android:paddingLeft="30dp"
            android:text="Home"
            android:textColor="#01BFFF"
            android:textSize="70dp" />


    </RelativeLayout>

    <GridLayout
        android:columnCount="1"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/studymat2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"

            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/studymat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/picture8" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bible Study Materials"
                    android:textAlignment="center"

                    android:gravity="center_horizontal"
                    android:textSize="25sp"
                    android:fontFamily="@font/blastimo"
                    android:textColor="@color/colorAccent"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <GridLayout
        android:columnCount="2"
        android:rowCount="1"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/counlink2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/counlink"
                    android:src="@drawable/picture3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counselling"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"

                    android:textSize="30sp"
                    android:fontFamily="@font/blastimo"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/minmat2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <LinearLayout
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/minmat"
                    android:src="@drawable/picture4"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ministries"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"


                    android:textSize="30sp"
                    android:fontFamily="@font/blastimo"
                    android:textColor="@color/colorAccent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
</LinearLayout>